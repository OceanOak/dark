#!/bin/bash
# Usage: worktree-remove <branch-name>
# Removes a git worktree for the given branch
# Run from inside the main repo or any of its worktrees

set -euo pipefail

if [ $# -eq 0 ]; then
    echo "Usage: worktree-remove <branch-name>"
    echo "Removes a git worktree"
    exit 1
fi

BRANCH="$1"
REPO_ROOT="$(git rev-parse --show-toplevel)"
REPO_NAME="$(basename "$REPO_ROOT")"
WORKTREE_DIR="$REPO_ROOT/../${REPO_NAME}-${BRANCH}"

# If not found, try without repo prefix (in case user passed full dir name)
if [ ! -d "$WORKTREE_DIR" ]; then
    WORKTREE_DIR="$REPO_ROOT/../${BRANCH}"
fi

if [ ! -d "$WORKTREE_DIR" ]; then
    echo "Worktree not found. Tried:"
    echo "  $REPO_ROOT/../${REPO_NAME}-${BRANCH}"
    echo "  $REPO_ROOT/../${BRANCH}"
    echo ""
    echo "Available worktrees:"
    git worktree list
    exit 1
fi

echo "Removing worktree at $WORKTREE_DIR..."
if ! git worktree remove "$WORKTREE_DIR" 2>/dev/null; then
    echo "Standard removal failed, trying with --force..."
    git worktree remove --force "$WORKTREE_DIR"
fi
echo "Worktree removed."
