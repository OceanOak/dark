{
  "name": "Darklang",
  "scopeName": "source.darklang",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#types"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.darklang",
          "match": "//.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.darklang",
          "match": "\\b(if|then|else|match|with|when|let|in|fn|type|module|and)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.darklang",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.darklang",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.darklang",
          "match": "\\b[0-9]+(L|UL|l|y|s|us)?\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.darklang",
          "match": "\\b(Bool|Int64|UInt64|String|List|Dict|Option|Result)\\b"
        }
      ]
    }
  }
}