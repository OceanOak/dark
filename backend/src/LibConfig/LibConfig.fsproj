<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <LangVersion>8.0</LangVersion>
    <!-- Publishing configuration -->
    <IsPublishable>false</IsPublishable>
    <IsTrimmable>true</IsTrimmable>
  </PropertyGroup>
  <ItemGroup>
    <None Include="paket.references" />
    <Compile Include="ConfigDsl.fs" />
    <Compile Include="Config.fs" />
  </ItemGroup>
  
  <Target Name="EmbedGitHash" BeforeTargets="BeforeBuild">
    <MakeDir Directories="$(IntermediateOutputPath)" />
    <Exec Command="git rev-parse --short HEAD > $(IntermediateOutputPath)build-hash.txt" />
    <ItemGroup>
      <EmbeddedResource Include="$(IntermediateOutputPath)build-hash.txt" />
    </ItemGroup>
  </Target>
  <ItemGroup>
    <ProjectReference Include="../Prelude/Prelude.fsproj" />
  </ItemGroup>
  <Import Project="..\..\.paket\Paket.Restore.targets" />
</Project>
