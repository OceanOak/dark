{
  "name": "dark-builder",

  "build": {
    "context": "..",
    "dockerfile": "../Dockerfile"
  },

  // Set *default* container specific settings.json values on container create.
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "FSharp.dotNetRoot": "/usr/share/dotnet",
        "FSharp.useSdkScripts": true,
        "FSharp.workspaceModePeekDeepLevel": 5,
        "FSharp.workspacePath": "${workspaceFolder}/backend/fsdark.sln",
        "remote.containers.cacheVolume": true,
        "remote.containers.workspaceMountConsistency": "delegated",
        "editor.tabSize": 2,
        "files.trimTrailingWhitespace": true,
        "python.formatting.provider": "yapf"
      },

      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        "ionide.ionide-fsharp",
        "esbenp.prettier-vscode",
        "ms-python.python",
        "editorconfig.editorconfig"
      ]
    }
  },

  "postCreateCommand": "cd ${containerWorkspaceFolder} && ./scripts/package-extension.sh",

  /////////////////////////////////////////////////
  // From here down, the contents are supposed to represent the exact same
  // as we see in script/builder
  /////////////////////////////////////////////////

  // Ports are loaded in the build process
  // Ports: 10011-10030 are test servers, 11001-11002 are BwdServer
  "forwardPorts": [10011, 10012, 10030, 11001, 11002],

  "containerEnv": {
    "IN_DEV_CONTAINER": "true",
    "DARK_CONFIG_ROOT_DIR": "/home/dark/repos/${localWorkspaceFolderBasename}",
    "DARK_CONFIG_RUNDIR": "/home/dark/repos/${localWorkspaceFolderBasename}/rundir"
  },

  "runArgs": [
    "--dns",
    "8.8.8.8",
    "--dns",
    "8.8.4.4",
    "--ulimit=nofile=1048576:1048576",
    "--hostname",
    "dark-dev",
    "--env-file",
    "config/dev",
    // "--env-file",
    // "config/local",
    "--env",
    "HOST_PWD=${localWorkspaceFolder}",
    "--security-opt",
    "seccomp=unconfined",
    "--label",
    "dark-dev-container"
  ],

  // Mount parent directory so git worktree relative paths resolve correctly
  // Convention: main repo must be named "dark", worktrees must be siblings named "dark-<branch>"
  "workspaceMount": "source=${localWorkspaceFolder}/..,target=/home/dark/repos,type=bind,consistency=delegated",
  "workspaceFolder": "/home/dark/repos/${localWorkspaceFolderBasename}",

  "mounts": [
    // Docker-in-Docker - uncomment this to be able to build Dark's production containers
    // "type=bind,src=/var/run/docker.sock,dst=/var/run/docker.sock",

    // Bash history - uncomment this to save bash history between container restarts
    // "type=bind,src=${localEnv:HOME}${localEnv:USERPROFILE}/.dark_bash_history,dst=/home/dark/.bash_history,consistency=cached",
    // If using a remote DOCKER_HOST, you need to mount a directory on the remote host instead
    // "type=bind,src=/home/paulbiggar/.dark_bash_history,dst=/home/dark/.bash_history,consistency=cached",

    // Build directories - use ${localWorkspaceFolderBasename} for worktree isolation
    "type=volume,src=dark_build_${localWorkspaceFolderBasename},dst=/home/dark/repos/${localWorkspaceFolderBasename}/backend/Build",
    "type=volume,src=dark_nuget_${localWorkspaceFolderBasename},dst=/home/dark/.nuget",

    // Tree-sitter - isolated per worktree
    "type=volume,src=tree-sitter-build_${localWorkspaceFolderBasename},dst=/home/dark/repos/${localWorkspaceFolderBasename}/tree-sitter-darklang/build",
    "type=volume,src=tree-sitter-node-modules_${localWorkspaceFolderBasename},dst=/home/dark/repos/${localWorkspaceFolderBasename}/tree-sitter-darklang/node_modules",

    // VS Code extensions - shared across worktrees (no isolation needed)
    "type=volume,src=darklang-dark-extension-volume,dst=/home/dark/.vscode-server/extensions",
    "type=volume,src=darklang-dark-extension-volume-insiders,dst=/home/dark/.vscode-server-insiders/extensions"
  ],

  // See https://aka.ms/vscode-remote/containers/non-root.
  "remoteUser": "dark",
  "containerUser": "dark",
  "updateRemoteUserUID": true,

  // Run one build-server, and keep it running for the life of the
  // devcontainer. This is in postStart rather than postAttach as postAttach would
  // add a new build-server each time and we only want one.
  "postStartCommand": "./scripts/devcontainer/_vscode-post-start-command",

  // Show the build-server output in a terminal
  // Use -F as it the build-server might not have output by the time this starts
  "postAttachCommand": "tail -n 1000 -F rundir/logs/build-server.log"
}
